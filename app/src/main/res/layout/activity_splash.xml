<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.app.maththpt.activity.SplashActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tracNghiem"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_short"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="@dimen/image_size_44dp"
        android:layout_height="@dimen/image_size_44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        wheel:matProg_barColor="@color/white"
        wheel:matProg_circleRadius="44dp"
        wheel:matProg_progressIndeterminate="true" />
</RelativeLayout>
